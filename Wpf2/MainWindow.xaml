<Window x:Class="Wpf2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2"
        mc:Ignorable="d"
        Title="Text Editor" Height="600" Width="800" MinHeight="500" MinWidth="500" WindowStartupLocation="CenterScreen"
        Background="CadetBlue">

    <StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="New_Click"/>
                <MenuItem Header="Open file" Click="File_Click"/>
                <MenuItem Header="Open folder" Click="Folder_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="About" Click="About_Click"/>
        </Menu>

        <TabControl Name="TabControl" TabStripPlacement="Top" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="350">
            
        </TabControl>

        <ListView Name="ListView1" VerticalAlignment="Bottom" Background="LightSteelBlue" ItemsSource="{Binding dir}"/>

    </StackPanel>
</Window>
